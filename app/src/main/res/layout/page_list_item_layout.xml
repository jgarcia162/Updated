<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent">

    <android.support.v7.widget.CardView
        android:id="@+id/item_layout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/page_title_text_view"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:maxLength="20"
                android:textIsSelectable="true"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:text="Page Title" />

            <TextView
                android:id="@+id/page_url_text_view"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_below="@id/page_title_text_view"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:textIsSelectable="true"
                android:textSize="15sp"
                android:textStyle="italic"
                tools:text="Page URL" />

            <ImageView
                android:id="@+id/page_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">
            </ImageView>
            <Space
                android:id="@+id/filler_space"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/page_url_text_view"/>

            <TextView
                android:id="@+id/update_status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/filler_space"
                android:textIsSelectable="true"
                tools:text="UPDATED" />

            <TextView
                android:id="@+id/time_of_last_update_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/update_status_text_view"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="true"
                android:textSize="12sp"
                tools:text="09-17-16 03:35:15" />
            <WebView
                android:id="@+id/card_view_webview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

            </WebView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>