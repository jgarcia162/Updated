<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/details_page_title_tv"
        android:layout_width="720dp"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="30sp"
        tools:text="Page Title"/>
    <EditText
        android:id="@+id/details_page_edit_title_et"
        android:layout_width="720dp"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp"
        android:inputType="text" />

    <ImageView
        android:id="@+id/details_edit_title_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/details_page_title_tv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/default_photo"/>
    <TextView
        android:id="@+id/details_update_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/details_page_title_tv"
        android:text="@string/details_last_updated"
        android:textSize="20sp"
        android:textStyle="bold|italic"/>
    <TextView
        android:id="@+id/details_last_updated_details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/details_update_tv"
        android:layout_toEndOf="@id/details_update_tv"
        android:layout_alignBottom="@id/details_update_tv"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        tools:text="time goes here" />
    <TextView
        android:id="@+id/details_url_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_update_tv"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="@string/details_url_tv_text"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/details_open_browser_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_url_tv"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:text="@string/open_in_browser_button_text"
        android:onClick="openInBrowser"/>
    <Button
        android:id="@+id/details_copy_url_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/details_open_browser_button"
        android:layout_toRightOf="@id/details_open_browser_button"
        android:layout_alignBottom="@id/details_open_browser_button"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/details_copy_url_button_text"/>
    <TextView
        android:id="@+id/details_notes_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_open_browser_button"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="@string/details_notes_title_text"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/details_notes_et"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:layout_below="@id/details_notes_title_tv"
        android:gravity="start"
        tools:text="TESTING THIS"/>

</RelativeLayout>